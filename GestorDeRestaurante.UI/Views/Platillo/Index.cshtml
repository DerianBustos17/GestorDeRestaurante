@model IEnumerable<GestorDeRestaurante.Model.Platillos>

@{
    ViewData["Title"] = "Index";
}

<h1>Catalogo de platillos del menu</h1>

<p>
    <a asp-action="Create">Agregar nuevo platillo</a>
</p>
<p>
    <a asp-action="MenuCompleto">Ver menu completo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                    @{
                        var base64 = Convert.ToBase64String(item.Imagen);
                        var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                    }
                    
                    <img src="@imgsrc" style="height:50px;" class="d-block w-50" />


            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {id=item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
              
            </td>
        </tr>
}
    </tbody>
</table>
